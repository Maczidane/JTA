<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdvancedFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_horizontal_advanced"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:freezesText="true"

                android:indeterminate="false"
                android:theme="@style/AppTheme" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">



                <android.support.v7.widget.CardView
                    android:id="@+id/CardViewAdvanced_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:clickable="true"

                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/textViewAdvanced_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"

                        android:padding="2dp"
                        android:text="@string/basic_13"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4d4d4d" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/box_date"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:theme="@style/AppTheme" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CardViewAdvanced_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:clickable="true"

                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/textViewAdvanced_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"

                        android:padding="2dp"
                        android:text="@string/basic_8"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4d4d4d" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/box_objects"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:theme="@style/AppTheme" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/CardViewAdvanced_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:clickable="true"

                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/textViewAdvanced_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"

                        android:padding="2dp"
                        android:text="@string/basic_9"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4d4d4d" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/box_constructors"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:theme="@style/AppTheme" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/CardViewAdvanced_4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:clickable="true"

                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/textViewAdvanced_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"

                        android:padding="2dp"
                        android:text="@string/basic_10"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4d4d4d" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/box_modifiers"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:theme="@style/AppTheme" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/CardViewAdvanced_5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:clickable="true"

                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/textAdvanced_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"

                        android:padding="2dp"
                        android:text="@string/basic_12"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4d4d4d" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/box_decision"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:theme="@style/AppTheme" />


                </android.support.v7.widget.CardView>








                <android.support.v7.widget.CardView
                    android:id="@+id/CardViewAdvanced_6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="3dp"
                    android:clickable="true"

                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/textViewAdvanced_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:clickable="true"

                        android:padding="2dp"
                        android:text="@string/basic_14"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4d4d4d"
                        android:textFontWeight="1" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/box_regular"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="end"
                        android:theme="@style/AppTheme" />


                </android.support.v7.widget.CardView>



            </LinearLayout>








        </LinearLayout>





    </ScrollView>

</FrameLayout>