                            android:layout_below="@+id/text_16"

                            android:text="@string/date_formatting_using_printf"/>

                        <TextView
                            android:id="@+id/text_18"
                            android:gravity="left"
                            android:layout_marginTop="10dp"
                            android:paddingStart="8dp"
