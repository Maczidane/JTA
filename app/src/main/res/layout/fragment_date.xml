                        <ImageView
                            android:id="@+id/text_24"
                            android:gravity="left"

                            android:paddingStart="8dp"
                            android:focusable="true"


                            android:src="@drawable/date_4_image"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/text_23"

                            />

                        <ImageView
                            android:id="@+id/text_25"
                            android:gravity="left"

                            android:paddingStart="8dp"


                            android:src="@drawable/date_5_image"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/text_24"

                            />

                        <TextView
                            android:id="@+id/text_26"
                            android:gravity="left"
                            android:layout_marginTop="13dp"
                            android:paddingStart="8dp"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:background="@color/dim_gray"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/text_25"

                            android:text="@string/date_26"/>

                        <View
                            android:layout_below="@id/text_26"
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_height="40dp" />







                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/nav_tutorial_date"



        android:layout_height="56dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/nav_items_color"
        app:itemTextColor="@color/nav_items_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:menu="@menu/tutorial_items" />


</RelativeLayout>